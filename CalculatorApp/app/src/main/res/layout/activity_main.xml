<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nathan_mccauslin.calculatorapp.MainActivity">

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="85dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorAccent"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:weightSum="14">
        <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="History"
            android:id="@+id/history"
            android:layout_weight="12"
            />
        <Button
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="x²"
            android:id="@+id/square"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="√"
            android:id="@+id/squareRoot"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:weightSum="4">
        <Button
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="C"
            android:id="@+id/reset"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="+/-"
            android:id="@+id/negate"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="%"
            android:id="@+id/modulus"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="/"
            android:id="@+id/division"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:weightSum="4">
        <Button
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="7"
            android:id="@+id/seven"
            android:layout_weight="1" />
        <Button
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="8"
            android:id="@+id/eight"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="9"
            android:id="@+id/nine"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="*"
            android:id="@+id/multiplication"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:weightSum="4">
        <Button
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="4"
            android:id="@+id/four"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="5"
            android:id="@+id/five"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="6"
            android:id="@+id/six"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="-"
            android:id="@+id/subtraction"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:weightSum="4">
        <Button
            android:id="@+id/one"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="1" />

        <Button
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:text="2"
        android:id="@+id/two"
        android:layout_weight="1" />

        <Button
            android:id="@+id/three"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="3" />

        <Button
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:text="+"
        android:id="@+id/addition"
        android:layout_weight="1"
         />
    </LinearLayout>
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:weightSum="16">

        <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="0"
            android:id="@+id/zero"
            android:layout_weight="14"
             />

        <Button
            android:id="@+id/decimalPnt"
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="."
            android:layout_weight="1"/>

        <Button
            android:layout_width="88dp"
            android:layout_height="80dp"
            android:text="="
            android:id="@+id/equals"
            android:layout_weight="1"
             />
    </LinearLayout>



</android.support.v7.widget.LinearLayoutCompat>
